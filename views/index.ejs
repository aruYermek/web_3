<div class="author">
  <h1 class="author-heading">Hi, I am Aruzhan!</h1>
  <p class="author_body">2 course student in AITU</p>
</div>

<img
  src="/img/main-photo.jpg"
  alt=""
  class="hero-image"
  width="450"
  height="528"
/>

<section class="articles">
  <h2 class="articles__heading">Latest Posts</h2>
  <div class="admin-title">
    <h2>Posts</h2>
    <a href="/add-post" class="button">+ Add New</a>
  </div>

  <ul class="article-ul">
    <% data.forEach(post => { %>
    <li>
      <a href="/post/<%= post.id %>">
        <span> <%= post.title %></span>
        <span class="article-list__date">
          <%= post.createdAt.toDateString() %></span>
        <div class="admin-post-controls">
          <a href="/edit-post/<%= post._id %>" class="btn">Edit</a>

          <form
            action="/delete-post/<%= post._id %>?_method=DELETE"
            method="POST"
          >
            <input type="submit" value="Delete" class="btn-delete btn" />
          </form>
        </div>
      </a>
    </li>

    <% }) %>
  </ul>
</section>
